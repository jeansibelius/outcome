{
  "name": "outcome",
  "version": "0.0.1",
  "description": "Simple app to track household expenses and budget",
  "main": "index.js",
  "scripts": {
    "client-lint": "npm run lint --prefix packages/client",
    "server-lint": "npm run lint --prefix packages/server",
    "lint": "npm run client-lint && npm run server-lint",
    "client-build": "npm run build --prefix packages/client",
    "client-install": "npm ci --prefix packages/client",
    "server-build": "npm run build --prefix packages/server",
    "server-install": "npm ci --prefix packages/server",
    "server-test": "npm test --prefix packages/server",
    "test": "npm run server-test",
    "tsc": "tsc -b",
    "build": "npm run tsc",
    "start": "NODE_ENV=production node build/server/src/index.js",
    "dev": "npm run dev --prefix packages/server",
    "docker": "docker compose -f docker-compose.dev.yml --env-file ./packages/server/.env up",
    "deploy": "flyctl deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeansibelius/outcome.git"
  },
  "author": "Rafael Linnankoski",
  "private": true,
  "bugs": {
    "url": "https://github.com/jeansibelius/outcome/issues"
  },
  "homepage": "https://github.com/jeansibelius/outcome#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "typescript": "^4.5.4",
    "eslint": "^8.16.0",
    "eslint-plugin-jest": "^26.2.2"
  }
}
